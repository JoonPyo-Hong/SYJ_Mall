<%@ Page Language="C#" AutoEventWireup="true" CodeFile="Test.aspx.cs" Inherits="Settle_Test" %>

<!DOCTYPE html>

<style>
	#wrap{
		width:500px;
		height:200px;
		
		margin:0px auto;
		overflow:hidden;
		position:relative;
		
	}
	#wrap div{
		width:1500px;
		height:200px;
		position:absolute;
		top:0px;
		left:0px;
		font-size:0;
	}
	#div_1{
		width:500px;
		height:200px;
		background-color:black;
		display:inline-block;
		
	}
	#div_2{
		width:500px;
		height:200px;
		background-color:yellow;
		display:inline-block;
	}
	#div_3{
		width:500px;
		height:200px;
		background-color:cornflowerblue;
		display:inline-block;
	}
</style>
<html xmlns="http://www.w3.org/1999/xhtml">
<script src="https://code.jquery.com/jquery-3.2.1.min.js"></script>
<head runat="server">
<meta http-equiv="Content-Type" content="text/html; charset=utf-8"/>
    <title></title>
</head>
<body>
    <form id="form1" runat="server">
        <div id="wrap">
			<div >
				<span id="div_1"></span>
				<span id="div_2"></span>
				<span id="div_3"></span>
			</div>
        </div>

		<div id="back">back</div>
		<div id="next">next</div>
    </form>
</body>
<script type="text/javascript">
    
      var imgs;
      var img_count;
      var img_position = 1;

      imgs = $("#wrap div");
      img_count = imgs.children().length;

      //버튼을 클릭했을 때 함수 실행
      $('#back').click(function () {
        back();
      });
      $('#next').click(function () {
        next();
      });

      function back() {
        if(1<img_position){
          imgs.animate({
            left:'+=500px'
          });
          img_position--;
        }
      }
      function next() {
        if(img_count>img_position){
          imgs.animate({
            left:'-=500px'
          });
          img_position++;
        }
      }
    
  </script>
</html>
